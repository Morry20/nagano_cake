<div class="row">
  <span class="bg-light h3 m-3 text-center">注文履歴詳細</span>
</div>

<div class="row">
  <div class="col-5">
    <h5 class="">注文情報</h5>
    <table class="table-bordered col-12">
      <tr><th class="bg-light">注文日</th><td><%= @order.created_at %></td></tr>

      <tr><th class="bg-light">配送先</th><td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td></tr>

      <tr><th class="bg-light">支払方法</th><td><%= @order.payment_method_i18n %></td></tr>

    </table>
  </div>

  <div class="col-5">
    <h5>請求情報</h5>
    <table class="table-bordered col-12">
      <tr><th class="bg-light">商品合計</th><td><%= @order.total_payment - @order.shipping_cost %></td></tr>
      <tr><th class="bg-light">配送料</th><td><%= @order.shipping_cost %></td></tr>
      <tr><th class="bg-light b">ご請求額</th><td><%= @order.total_payment %></td></tr>
    </table>
  </div>
</div>

<div class="row mt-4">
  <div class="col-8">
    <h5>注文内容</h5>
    <table class="table-bordered col-12">
      <thead>
        <tr class="bg-light">
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody><% @order.order_details.each do|order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.with_tax_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.item.with_tax_price * order_detail.amount %></td>
        </tr><% end %>
      </tbody>
    </table>
  </div>


</div>