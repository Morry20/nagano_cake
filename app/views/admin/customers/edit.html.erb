<h2><%= @customer.last_name+first_name %>さんの会員情報編集</h2>

<p>会員ID</p>
<h4><%= @customer.last_name+first_name %></h4><br>

<%= form_with model: @customer, url:admin_customer_path(@customer.id), local:true do |f| %>

<p>氏名</p>
<% f.text_field :last_name+:first_name %>

<p>フリガナ</p>
<% f.text_field :last_name_kana+:first_name_kana %>

<p>郵便番号</p>
<% f.text_field :postal_code %>

<p>住所</p>
<% f.text_field :address %>

<p>電話番号</p>
<% f.text_field :telephone_number %>

<p>メールアドレス</p>
<% f.text_field :email %>

<p>会員ステータス</p>
<%= f.radio_button :is_deleted, "有効" %>
<%= f.label :is_deleted, "有効", {value: "有効", style: "display: inline-block;"} %>
<%= f.radio_button :is_deleted, "退会" %>
<%= f.label :is_deleted, "退会", {value: "退会", style: "display: inline-block;"} %></br>

<button type="button" class="btn btn-success btn-lg">
   <%= f.submit "変更を保存する"  %>
</button>