<h2>ジャンル一覧・追加</h2>

<%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>

  <h4>ジャンル名</h4>
  <%= f.text_field :name %>

  <%= f.submit '新規登録' %>

<% end %>

<h2>ジャンル</h2>
<% @genres.each do |genre| %>
  <span><%= genre.name %></span>
  <%= link_to "編集する", admin_edit_genres_path(genre.id) %>
<% end %>