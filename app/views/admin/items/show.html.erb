<span class="h3 bg-light m-3">商品詳細</span>

<div class="row">
   <%= attachment_image_tag @item, :image , :fill, 350, 350, format: 'jpeg',fallback: "no_image.jpg" ,class:"col-5"%>

   <div class="col-6">
      <table class="table">
         <tbody>
            <tr><th>商品名</th><td><h4><%= @item.name %></h4></td></tr>
            <tr><th>商品説明</th><td><h4><%= @item.introduction %></h4></td></tr>
            <tr><th>ジャンル</th><td><h4><%= @item.genre.name %></h4></td></tr>
            <tr><th>税抜価格</th><td><h4><%= @item.price %></h4></td></tr>
            <tr><th>販売ステータス</th><td><h4><%= @item.is_active %></h4></td></tr>
         </tbody>
      </table>

      <button type="button" class="btn btn-success btn-lg">
         <%= link_to "編集する", edit_admin_item_path(@item.id),class:"text-white" %>
      </button>
   </div>

</div>

