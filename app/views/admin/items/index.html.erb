<span class="h3 bg-light m-3">商品一覧</span>
<btn class="btn btn-light m-3"><%= link_to "+",new_admin_item_path, class:"h5" %></btn>

<table class="col-12 table">
   <thead>
      <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
      </tr>
   </thead>

   <tbody>
      <% @items.each do |item| %>
         <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, "/admin/items/#{item.id}" %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active %></td>
         </tr>
      <% end %>
   </tbody>
</table>

<%= paginate @items %>