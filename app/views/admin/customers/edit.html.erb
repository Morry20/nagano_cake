<h3><%= @customer.full_name %>さんの会員情報編集</h3>

<p>会員ID　　　　　　<%= @customer.id %></p><br>

<%= form_with model: @customer, url:admin_customer_path(@customer.id), local:true do |f| %>

  <p>氏名　　　　　　<%= f.text_field :last_name %><%= f.text_field :first_name %></p>


  <p>フリガナ　　　　<%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></p>


  <p>郵便番号　　　　<%= f.text_field :postal_code %></p>


  <p>住所　　　　　　<%= f.text_field :address %></p>


  <p>電話番号　　　　<%= f.text_field :telephone_number %></p>


  <p>メールアドレス　<%= f.text_field :email %></p>


  <p>会員ステータス
    <% if @customer.is_deleted == true %>
      <%= f.radio_button :is_deleted, false %>
      <%= f.label :is_deleted, "有効", {value: "有効", style: "display: inline-block;"} %>
      <%= f.radio_button :is_deleted, true, checked: true %>
      <%= f.label :is_deleted, "退会",  {value: "退会", style: "display: inline-block;"}%>
    <% else %>
      <%= f.radio_button :is_deleted, false, checked: true %>
      <%= f.label :is_deleted, "有効", {value: "有効", style: "display: inline-block;"} %>
      <%= f.radio_button :is_deleted, true %>
      <%= f.label :is_deleted, "退会", {value: "退会", style: "display: inline-block;"} %>
    <% end %>
  </p></br>

  <%= f.submit "変更を保存する",class: "btn btn-success btn-lg" %>

<% end %>