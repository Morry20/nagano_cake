<div class="row">

  <span class="h3 bg-light mt-3  mb-3">注文履歴一覧</span>

  <table class="table col-12">
    <thead>
      <tr class="bg-light">
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>

    <% @all_amount = 0 %>

    <tbody><% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
        <td><%= order.name %></td>
        <% order.order_details.each do|order_detail| %><% @all_amount += order_detail.amount %><% end %>
        <td><%= @all_amount %></td>
      </tr><% end %>
    </tbody>
  </table>

</div>
<%= paginate @orders %>