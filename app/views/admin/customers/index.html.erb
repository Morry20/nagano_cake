<span class="h3 bg-light m-3">会員一覧</span>

<div class="row m-3">
   <table class="table">
      <thead>
         <tr class="bg-light">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
         </tr>
      </thead>

      <tbody>
         <% @customers.each do |customer| %>
            <tr>
               <th><%= customer.id %></th>
               <th><%= link_to customer.last_name+customer.first_name, "/admin/customers/#{customer.id}" %></th>
               <th><%= customer.email %></th>
               <th>
                  <% if customer.is_deleted == true %>
                     <h4 class="text-secondary">退会</h4>
                  <% else %>
                     <h4 class="text-success">有効</h4>
                  <% end %>
               </th>
            </tr>
         <% end %>
      </tbody>
   </table>
</div>

<%= paginate @customers %>
