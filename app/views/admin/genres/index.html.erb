<span class="bg-light h3 m-3">ジャンル一覧・追加</span>

<%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>

  <h4 class="m-2">ジャンル名</h4>
  <div class="row m-2">
    <%= f.text_field :name %>
    <%= f.submit '新規登録',class:"ml-2 btn btn-success" %>
  </div>

<% end %>

<table class="table col-4 m-2">
  <thead>
    <tr class="bg-light">
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody><% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %>　　　　　　　<%= link_to "編集する", admin_edit_genres_path(genre.id),class:"btn btn-success" %></td>
    </tr><% end %>
  </tbody>
</table>
<%= paginate @genres %>