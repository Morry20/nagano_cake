<div class="row m-2">
  <span class="h3 bg-light m-3">配送先登録/一覧</span>
</div>

<%= form_with model: @address, url:addresses_path, local:true do |f| %>

  <div class="row">
    <p class="col-3">郵便番号（ハイフンなし）</p>
    <%= f.text_field :postal_code,class:"form-control col-4" %>
  </div>

  <div class="row">
    <p class="col-3">住所</p>
    <%= f.text_field :address,class:"form-control col-4" %>
  </div>

  <div class="row">
    <p class="col-3">宛名</p>
    <%= f.text_field :name,class:"form-control col-4" %>
  </div>

  <div class="row">
    <%= f.submit "新規登録",class:"btn btn-success btn-lg m-5"%>
  </div>

<% end %>

<div class="row">
  <table class="col-9 table-bordered">
    <thead>
      <tr class="bg-light">
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th>  </th>
      </tr>
    </thead>

    <tbody><% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td class="text-center"><%= link_to "編集する",edit_address_path(address.id), class:"btn btn-success m-2" %><%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger m-2" %></td>
      </tr><% end %>
    </tbody>
  </table>
</div>
