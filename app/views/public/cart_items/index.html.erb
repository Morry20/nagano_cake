<div class="row">
  <span class="bg-light h3 mt-3">ショッピングカート</span>

</div>

<div class="row">
  <table class="col-9 table-bordered">
    <thead>
      <tr class="bg-light">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th> </th>
      </tr>
    </thead>

    <tbody><% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= converting_to_jpy(cart_item.item.price) %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
        <td class="text-center"><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger m-2" %></td>
      </tr><% end %>
    </tbody>
  </table>

</div>